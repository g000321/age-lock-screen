<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_titlebar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/white" >

    <ImageView
        android:stateListAnimator="@animator/button_press"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="back"
        android:paddingLeft="22dp"
        android:paddingRight="15dp"
        android:src="@drawable/base_back" />

    <TextView
        android:id="@+id/head_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="0dp"
        android:textColor="@color/title_font"
        android:textSize="@dimen/title_textSize" />

    <ImageView
        android:id="@+id/head_right_button"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginRight="10dp"
        android:onClick="finish"
        android:text=""
        android:background="@color/trans"
        android:layout_margin="4dp"
        android:textColor="@color/gray"
        android:textSize="@dimen/title_textSize"
        android:visibility="gone"
         />
    <Button
        android:id="@+id/head_right_text_button"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginRight="5dp"
        android:onClick="finish"
        android:text="完成"
        android:background="@color/trans"
        android:layout_margin="4dp"
        android:textColor="@color/title_font"
        android:textSize="@dimen/title_textSize"
        android:visibility="gone"
         />
    <View
        android:id="@+id/view_title_line"
        android:layout_height="0.5dp"
        android:background="@color/main_theme"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_title_line"
        />

    </RelativeLayout>